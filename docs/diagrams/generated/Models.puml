@startuml
skinparam backgroundColor transparent
skinparam classAttributeIconSize 0
skinparam class {
  BackgroundColor white
  ArrowColor black
  BorderColor black
}
class BoardConverter {
BoardConverter --|> JsonConverter
}
class GameHistory {
  + Id : Guid
  + PlayerUsername : string
  + GameId : string
  + GameFinishedAt : DateTime
  + Result : string
}
class GameStateInfo {
  + IsCreatorReady : bool
  + IsOpponentReady : bool
  + IsCreatorTurn : bool
  + IsGameStarted : bool
  + IsGameEnded : bool
  + IsOpenLobby : bool
  + CreatedAt : DateTime
}
class GameStateManager {
  + IsCreatorReady : bool
  + IsOpponentReady : bool
  + IsCreatorTurn : bool
  + IsGameStarted : bool
  + IsGameEnded : bool
  + IsOpenLobby : bool
  + CreatedAt : DateTime
}
class Position {
  + Row : int
  + Col : int
  + IsHit : bool
}
class LobbyInfo {
  + Id : string
  + CreatorName : string
  + Status : string
  + CreatedAt : DateTime
}
class PlayerRanking {
  + PlayerUsername : string
  + Rating : int
  + Wins : int
  + Losses : int
  + TotalGames : int
}
class Game {
  + Id : string
  + CreatorName : string
  + IsOpenLobby : bool
  + State : GameState
  + CreatedAt : DateTime
  + CreatorReady : bool
  + JoinerReady : bool
  + CreatorBoardSet : bool
  + JoinerBoardSet : bool
  + CreatorShots : List<Position>
  + JoinerShots : List<Position>
}
class ShotResultResponse {
  + Result : ShotResult
  + IsHit : bool
  + GameState : GameState
}
class User {
  + Id : int
  + CreatedAt : DateTime
}
@enduml
